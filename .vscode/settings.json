{
  // Set default formatter to prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Automatic formatting by prettier when saving files
  "editor.formatOnSave": true,
  // Automatic formatting by ESLint when saving files
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "cSpell.words": ["Atsuya", "Invocier", "stylelint"]
}
